@namespace Rnwood.Smtp4dev.Client
@inherits LayoutComponentBase


<AntDesign.ProLayout.BasicLayout Logo="@("logo-light.png")" Title=""
                                 MenuData="_menuData">
    <RightContentRender>

        <Space Class="@("right")" Size="@("24")">
            <SpaceItem>
                <Rnwood.Smtp4dev.Client.Components.HubConnectionStatus/>
            </SpaceItem>
            <SpaceItem>
   
                <AntDesign.Tooltip Title="@("Settings")" Placement="@Placement.Bottom">
                    <Unbound>
                        <span class="action">
                            <Icon Type="setting" Theme="outline"/>
                        </span>
                    </Unbound>
                </AntDesign.Tooltip>
            </SpaceItem>
        </Space>
    </RightContentRender>
    <ChildContent>

        @Body
    </ChildContent>
    <FooterRender>
        <div class="ant-pro-global-footer">
            <div class="ant-pro-global-footer-copyright">
                <Rnwood.Smtp4dev.Client.Components.VersionInfo/>
            </div>
        </div>
    </FooterRender>
</AntDesign.ProLayout.BasicLayout>

